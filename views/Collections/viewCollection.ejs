<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../viewCollections.css">
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300&display=swap" rel="stylesheet">
    <title>View Collections</title>

</head>

<body>
    <%- include("../adminSideBar.ejs") %>
    <div id="rowCollection">
        <div id="columnCollection"> 
            <div id="search-container">
                <form action="/Collections/ViewSpecificCollection" method="GET" id="searchform">
                    <input type="text" id="search" name="collectionNameSearch" placeholder="Search...">
                    <button id="searchCollectionButton" type="submit" id="searchbutton">Search</button>
                </form>
            </div>
            <div id="collectionsDiv">
                <table id="collectionsTable">
                    <% documentNames.forEach(function(name, index) { %>
                    <tr data-index="<%= index %>">
                        <td class="collectionName">
            
                            <%= name %>
                        </td>
                    </tr>
                    <% }); %>
                </table>

            </div>
        </div>
        <div id="collectionTableDiv">
            <h2>Search Selected Collection</h2>
            <table id="showTableCollection">
                <tr>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Location</th>
                    <th>Mobile</th>
                    <th>Name</th>
                    <th>Order</th>
                    <th>Status</th>
                </tr>
                <% 
                collectionDetails.sort((a, b) => a.order - b.order);

                for(var i=0; i < collectionDetails.length; i++) { %>
                    <tr>
                        <td><%= collectionDetails[i].lat %></td>
                        <td><%= collectionDetails[i].lng %></td>
                        <td><%= collectionDetails[i].location %></td>
                        <td><%= collectionDetails[i].mobile %></td>
                        <td><%= collectionDetails[i].name %></td>
                        <td><%= collectionDetails[i].order %></td>
                        <td><%= collectionDetails[i].status %></td>
                    </tr>
                <% } %>

        </div>


    </div>
</body>

</html>